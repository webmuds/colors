{
  "name": "@webmuds/colors",
  "version": "0.3.1",
  "description": "MUD color tags string parser for WebMUDs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test c8 mocha",
    "lint": "standardx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/webmuds/colors.git"
  },
  "author": "webmuds.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webmuds/colors/issues"
  },
  "homepage": "https://github.com/webmuds/colors#readme",
  "dependencies": {
    "escape-html": "1.0.3",
    "emoji-regex": "10.3.0"
  },
  "devDependencies": {
    "@dimensionalpocket/development": "github:dimensionalpocket/development-js#1.3.0"
  },
  "babel": {
    "extends": "./node_modules/@dimensionalpocket/development/babel"
  },
  "eslintConfig": {
    "extends": "./node_modules/@dimensionalpocket/development/eslint"
  },
  "mocha": {
    "recursive": true,
    "reporter": "dot",
    "colors": true
  },
  "c8": {
    "extends": "./node_modules/@dimensionalpocket/development/c8/default.json",
    "include": [
      "index.js",
      "src"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
