{
  "name": "@webmuds/colors",
  "version": "0.1.0",
  "description": "MUD color tags string parser for WebMUDs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test c8 mocha",
    "test:ci": "mocha",
    "lint": "standardx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/webmuds/colors.git"
  },
  "author": "webmuds.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webmuds/colors/issues"
  },
  "homepage": "https://github.com/webmuds/colors#readme",
  "devDependencies": {
    "@babel/core": "7.14.5",
    "@babel/eslint-parser": "7.14.5",
    "@types/chai": "4.2.18",
    "@types/mocha": "8.2.2",
    "@types/node": "14.17.3",
    "c8": "7.7.3",
    "chai": "4.3.4",
    "mocha": "9.0.0",
    "standardx": "7.0.0"
  },
  "standardx": {
    "env": "mocha"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "rules": {
      "no-var": 0
    }
  },
  "babel": {},
  "mocha": {
    "recursive": true,
    "reporter": "dot",
    "colors": true
  },
  "c8": {
    "all": true,
    "include": [
      "index.js",
      "src"
    ]
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "escape-html": "1.0.3"
  }
}
